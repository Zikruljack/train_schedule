<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Train Schedules</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css">
    <link rel="stylesheet" href="/style.css">

</head>

<body>
    <div class="container my-3">
        <div class="row">
            <nav class="navbar navbar-expand-lg bg-light">
                <div class="container-fluid">
                    <a class="navbar-brand" href="/">Train Schedules</a>
                    <button class="navbar-toggler" type="button">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse">
                        <ul class="navbar-nav ms-auto ">
                            <li class="nav-item">
                                <a class="nav-link active" href="/schedule">Schedules</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link " href="/stations">Stations</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/trains">Trains</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
        <div class="row">
            <div class="col-12 my-5 text-center">
                <p>
                    Berikut Daftar Kereta Api
                </p>
            </div>
        </div>
        <div>
            <a href="/trains/create" class="btn btn-success"> Tambah Data</a>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Train</th>
                    <th scope="col">Class</th>
                    <th scope="col">Arrival</th>
                    <th scope="col">Departure</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% results.forEach(trains=> { %>
                    <tr>
                        <th scope="row">
                            <%= trains.id %>
                        </th>
                        <td class="text-capitalize">
                            <%= trains.name %>
                        </td>
                        <td>
                            <%= trains.class %>
                        </td>
                        <td>
                            <%= trains.schedule.timeArrive %>
                        </td>
                        <td>
                            <%= trains.schedule.timeDepart %>
                        </td>
                        <td>
                            <button><a href="/trains/update/<%= trains.id %>" class="badge text-bg-danger
                                text-decoration-none">Edit</a>
                            </button>
                            <button><a href="/trains/delete/<%= trains.id %>" class="badge text-bg-danger
                              text-decoration-none">Hapus</a>
                            </button>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>

    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>

</body>

</html>